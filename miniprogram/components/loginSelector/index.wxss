.option {
    width: 350rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 50rpx;
    background: #FFF;
    box-shadow: 0px 8rpx 8rpx 0px rgba(0, 0, 0, 0.50);
    color: #000;
    font-family: Alibaba PuHuiTi 2.0;
    font-size: 32rpx;
    font-weight: 900;
    margin-bottom: 34rpx;
}

.option:last-child {
    margin-bottom: 0;
}

.option.act {
    background: #B7EC97;
}