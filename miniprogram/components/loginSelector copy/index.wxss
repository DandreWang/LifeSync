.wrap {
    position: relative;
}

.inner {
    width: 472rpx;
    height: 100rpx;
    text-align: center;
    border-radius: 25px;
    background: #FFF;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.50);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
}
.text {
  color: #000;
  text-align: center;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 32rpx;
  font-weight: 900;
  margin-left: 40rpx;
}

.holder {
    color: #A0A0A0;
    text-align: center;
    font-family: Alibaba PuHuiTi 2.0;
    font-size: 32rpx;
    font-weight: 900;
}

