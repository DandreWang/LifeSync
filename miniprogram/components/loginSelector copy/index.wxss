.drap_wrap {
    overflow: hidden;
    position: absolute;
    width: 100%;
    left: -20rpx;
    padding: 0 20rpx 20rpx;
    top: 50rpx;
}

.drap {
    position: relative;
    width: 100%;
    border-radius: 0 0 50rpx 50rpx;
    background: #FFF;
    box-shadow: 0px 8rpx 8rpx 0px rgba(0, 0, 0, 0.50);
    padding-top: 50rpx;
    transition: all .35s;
}

.option {
    height: 100rpx;
    color: #000;
    text-align: center;
    font-family: Alibaba PuHuiTi 2.0;
    font-size: 32rpx;
    font-weight: 900;
    line-height: 100rpx;
    position: relative;
}

.option::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 370rpx;
    margin-left: -185rpx;
    height: 1px;
    background: #D9D9D9;
}