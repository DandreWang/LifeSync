.content_view {
  padding: 0 40rpx;
}

.top {
  text-align: center;
  color: #2C2C2C;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 24rpx;
  font-style: normal;
  font-weight: 900;
  line-height: normal;
  margin-bottom: 12rpx;
}

.top_icon {
  width: 24rpx;
  height: 24rpx;
}

.box {
  display: flex;
  min-height: 294rpx;

}

.left {
  flex-grow: 1;
  border-radius: 50rpx;
  background: #FFF;
  padding: 40rpx 50rpx;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(0, 0, 0, 0.50);
}

.date {
  color: #BFBFBF;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 40rpx;
  font-style: normal;
  font-weight: 900;
  line-height: 56rpx;
}

.txt {
  color: #000;
  text-align: center;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 24rpx;
  font-style: normal;
  font-weight: 900;
  line-height: 2;
}

.right {
  width: 20vw;
  margin-left: 40rpx;
  flex-shrink: 0;
  border-radius: 50rpx;
  background: #FFF;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(0, 0, 0, 0.50);
  text-align: center;
  position: relative;
}

.water {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #D1E7FE;
  border-radius: 0 0 50rpx 50rpx;
}

.emoji {
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
  flex-shrink: 0;
}