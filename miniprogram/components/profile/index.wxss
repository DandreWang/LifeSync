.profile {
  text-align: center;
  position: relative;
  margin-top: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.setting {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 48rpx;
}

.nick {
  color: #000;
  font-family: VonwaonBitmap 16px;
  font-size: 50rpx;
  font-weight: 400;
}

.sub {
  color: #AAA;
  font-family: VonwaonBitmap 12px;
  font-size: 20rpx;
  font-weight: 400;
}

.img {
  width: 260rpx;
  height: 260rpx;
}

.btns {
  margin: 28rpx auto 0;
  width: 574rpx;
  height: 124rpx;
  border-radius: 100rpx;
  background: #F5F5F5;
  box-shadow: 0px 6rpx 4rpx 0px rgba(0, 0, 0, 0.25) inset;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #B7EC97;
  box-shadow: 0px 8rpx 8rpx 0px rgba(0, 0, 0, 0.50);
  line-height: 4;
  color: #000;
  text-align: center;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 20rpx;
  font-weight: 600;
}